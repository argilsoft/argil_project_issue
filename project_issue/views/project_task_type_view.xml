<?xml version="1.0"?>
<odoo>
        
        <record id="task_type_edit_statistics" model="ir.ui.view">
            <field name="name">project.task.type.form.statistics</field>
            <field name="model">project.task.type</field>
            <field name="inherit_id" ref="project.task_type_edit" />
            <field name="arch" type="xml">
                <field name="fold" position="after">
                    <field name="mark_as_internal_testing" />
                    <field name="mark_as_customer_testing" />
                    <field name="mark_as_ended" />
                </field>
            </field>
        </record>
    
    
        <record id="task_type_edit_statistics_tree" model="ir.ui.view">
            <field name="name">project.task.type.tree.statistics</field>
            <field name="model">project.task.type</field>
            <field name="inherit_id" ref="project.task_type_tree" />
            <field name="arch" type="xml">
                <field name="description" position="after">
                    <field name="mark_as_internal_testing" />
                    <field name="mark_as_customer_testing" />
                    <field name="mark_as_ended" />
                </field>
            </field>
        </record>
    
</odoo>